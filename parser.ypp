%{
	#include "hw3_output.hpp"
	#include "Structs.hpp"
	#include "SymbolTables.hpp"
    #include <stdlib.h>
	using namespace output;

    typedef enum {
        ENUM_NONE,
        ENUM_ASSIGN,
        ENUM_RELOP,
        ENUM_AND,
        ENUM_OR,
        ENUM_NOT,
        ENUM_BINOP,
    } Operation;

    CodeBuffer& buffer = CodeBuffer::instance();

	int main();
    extern int yylineno;
    extern char* yytext;
    extern int yylex();
    void CheckLegalB(int n);
    Exp* NewCastedExp(const Exp* exp, const string& type);
    Function* GetFunction(string name, ArgVector& args);
    void AssertFunctionUseLegal(ArgVector& expected, ArgVector& current, string name);
    string GetAnnotation(string name);
    Exp* ExecuteOperation(Exp* exp1, Exp* exp2, Operation operation, const string& command, CodeBuffer& buffer);
    string GetType(string name);
    void AssertAssignLegal(string type1, string type2);
    bool NumberType(Exp* exp);
    void AssertLegalEpsilonFuncsDerivation();
    int yyerror(const char* message);
    void SCE(Exp *bool_exp, CodeBuffer& buffer);
    void HandleCall(Exp* call, Id* id, ArgumentList* expList, Function* f, bool is_with_args, CodeBuffer& buffer);
    void EmitGlobalVariables(CodeBuffer& buffer);
    void HandleDevideByZero(Exp* var1, Exp* var2, string& m_reg, CodeBuffer &buffer);

	class Parser {
	private:

		int loopCount = 0;
	public:
		TablesList symbolTable;
		Parser() {TablesList* p = new TablesList(); symbolTable = *p;};
		string ScopeReturnType = "";
		string ExpType;
		void AssertReturn(const string& retType){
			if (retType != ScopeReturnType && !(ScopeReturnType == "INT" && retType == "BYTE"))
			{
				output::errorMismatch(yylineno);
				exit(0);
			}
		}

		void EnterLoopScope(){
			loopCount++;
			symbolTable.OpenScope();

		}

		void ExitLoopScope(){
			loopCount--;
			symbolTable.CloseScope();
		}

		void AssertContinueLegal(){
			if (loopCount <= 0){
				output::errorUnexpectedContinue(yylineno);
				exit(1);
			}
		}

		void AssertBreakLegal(){
			if (loopCount <= 0){
				output::errorUnexpectedBreak(yylineno);
				exit(1);
			}
		}

	};

	class Generator {

    public:
        size_t str_num = 0;
        size_t var_num = 0;
        bool if_scope_start = false;
        string frame_ptr;
        int num_args;
        bool generated_return = false;
        static string new_tmp() {
            string var = "%t" + to_string(var_num);
            var_num++;
            return var;
        }
        static string new_string() {
            string str = "@s" + to_string(str_num);
            str_num++;
            return str;
        }
    };

    Generator generator;
	Parser parser;


%}

%token VOID
%token INT
%token BYTE
%token B
%token BOOL
%token CONST
%token TRUE
%token FALSE
%token RETURN

%nonassoc IF
%nonassoc ELSE


%token WHILE
%token BREAK
%token CONTINUE
%token SC
%token COMMA
%token LBRACE
%token RBRACE
%token ID
%token NUM
%token STRING

%right ASSIGN
%left OR
%left AND
%left RELOP_EQUAL RELOP_NOT_EQUAL
%left ID

%nonassoc RELOP_LT RELOP_GT RELOP_LTE RELOP_GTE

%left BINOP_ADD BINOP_SUB
%left BINOP_MULTIPLY BINOP_DIV
%right NOT
%nonassoc RPAREN
%nonassoc LPAREN

%type<exp> NUM
%type<id> ID
%type<exp> Exp
%type<exp> Type
%type<exp> RetType
%type<exp> Call
%type<exp> TypeAnnotation
%type<argument> FormalDecl
%type<argument_list> FormalsList
%type<argument_list> Formals
%type<argument_list> ExpList
%type<label> MarkInIf;
%type<label> M;
%type<block> N;
%type<block> Statement;
%type<block> Statements;
%type<scope> If;
%type<scope> Else;





%%
Program        : { EmitGlobalVariables(buffer); } Funcs                      {
																				  parser.symbolTable.CloseGlobal();
                                                                              }


Funcs          : FuncDecl Funcs                                               {
																				  /* No Action */
                                                                              }
               |                                                              {
                                                                                  AssertLegalEpsilonFuncsDerivation();
                                                                              }


FuncDecl       : RetType ID LPAREN Formals RPAREN                             {
																				   generator.generated_return = false; parser.symbolTable.AddSymbol($2->name, $1->type, $4->arguments);
                                                                              }
                 LBRACE                                                       {
                                                                                  parser.symbolTable.OpenScope();
                                                                                  parser.ScopeReturnType = $1->type;
                                                                                  parser.symbolTable.AddArgsSymbols($4->arguments);

                                                                                  string ir_ret_type = parser.ScopeReturnType == "VOID" ? "void" : "i32";
                                                                                  Function* func_sym = dynamic_cast<Function*>(parser.symbolTable.GetSymbol($2->name, true));

                                                                                  buffer.emit("define " + ir_ret_type + " @" + $2->name + func_sym->parameters() + " {");
                                                                                  generator.num_args = $4->arguments.size();
                                                                                  generator.frame_ptr = generator.new_tmp();
                                                                                  buffer.emit(generator.frame_ptr + " = alloca [" + to_string(50 + generator.num_args) + " x i32]");
                                                                                  for (int i = 0; i < generator.num_args; i++) {
                                                                                      string ptr = generator.new_tmp();
                                                                                      string reg = "%" + to_string(i);
                                                                                      string index = to_string(generator.num_args - i - 1);
                                                                                      buffer.emit(ptr + " = getelementptr [" + to_string(50 + generator.num_args) + " x i32], [" + to_string(50 + generator.num_args) + " x i32]* " + generator.frame_ptr + ", i32 0, i32 " + index);
                                                                                      buffer.emit("store i32 " + reg + ", i32* " + ptr);
                                                                                  }
                                                                              }
                 Statements RBRACE                                                
																			  {
                                                                                  parser.symbolTable.CloseScope();
                                                                                  if(1) {
                                                                                      if(parser.ScopeReturnType == "VOID") {
                                                                                          buffer.emit("ret void");
                                                                                      }
                                                                                      else {
                                                                                          string ret_val = generator.new_tmp();
                                                                                          buffer.emit(ret_val + " = add i32 0, 0");
                                                                                          buffer.emit("ret i32 " + ret_val);
                                                                                      }
                                                                                      generator.generated_return = true;
                                                                                  }
                                                                                  buffer.emit("}");
                                                                                  parser.ScopeReturnType = "";
                                                                              }

RetType        : Type                                                         {
                                                                                  $$ = new Exp($1->type);
                                                                              }
               | VOID                                                         {
                                                                                  $$ = new Exp("VOID");
                                                                              }														  


Formals        : FormalsList                                                  {
                                                                                  $$->arguments = $1->arguments;
                                                                              }
               |                                                              {
                                                                                  $$ = new ArgumentList();
                                                                              }


FormalsList    : FormalDecl                                                   {
                                                                                  $$ = new ArgumentList();
                                                                                  $$->arguments.push_back(*$1);
                                                                              }
               | FormalDecl COMMA FormalsList                                 {
                                                                                  $$ = new ArgumentList();
                                                                                  $$->arguments = $3->arguments;
                                                                                  $$->arguments.push_back(*$1);
                                                                              }


FormalDecl     : TypeAnnotation Type ID                                       {
                                                                                  $$ = new Argument($1->type, $3->name, $2->type);
                                                                              }

If        : IF LPAREN Exp CheckBool RPAREN MarkInIf ScopeStart Statement ScopeEnd
                                                                              {
                                                                                  $$ = new CodeGenScope($3, $6->label, $8->nextList, $8->breakList, $8->continueList);
                                                                              }

Else      :   ELSE N M ScopeStart Statement ScopeEnd                    {
                                                                                  $$ = new CodeGenScope(nullptr, $3->label, buffer.merge($2->nextList, $5->nextList), buffer.merge($2->breakList, $5->breakList), buffer.merge($2->continueList, $5->continueList));
                                                                              }

M           :   /* No Action */                                               { $$ = new CodeGenLabel(buffer.genLabel()); }

N           :   /* No Action */                                               {
                                                                              int address = buffer.emit("br label @");
                                                                              $$ = new CodeGenBlock();
                                                                              $$->nextList = CodeBuffer::makelist({address, FIRST});
                                                                            }

Statements     : Statement                                                    {
                                                                                  $$ = new CodeGenBlock();
                                                                                  $$->continueList = $1->continueList;
                                                                                  $$->breakList = $1->breakList;
                                                                                  $$->nextList = $1->nextList;
                                                                              }
               | Statements Statement                                         {
                                                                                  $$ = new CodeGenBlock();
                                                                                  $$->continueList = CodeBuffer::merge($1->continueList, $2->continueList);
                                                                                  $$->breakList = CodeBuffer::merge($1->breakList, $2->breakList);
                                                                                  $$->nextList = CodeBuffer::merge($1->nextList, $2->nextList);
                                                                              }
Statement      : LBRACE ScopeStart Statements RBRACE ScopeEnd                 {
                                                                                  $$ = new CodeGenBlock();
                                                                                  $$->continueList = $3->continueList;
                                                                                  $$->breakList = $3->breakList;
                                                                                  $$->nextList = $3->nextList;
                                                                              }
               | TypeAnnotation Type ID SC                                    {
																				 if($1->type == "CONST") {
																					output::errorConstDef(yylineno);
																					exit(1);
																				 }
																				 parser.symbolTable.AddSymbol($1->type, $3->name, $2->type);
																				 string offset = to_string(parser.symbolTable.GetSymbol($3->name, false)->offset + generator.num_args);
                                                                                 string ptr = generator.new_tmp();

                                                                                 buffer.emit(ptr + " = getelementptr [" + to_string(50 + generator.num_args) + " x i32], [" + to_string(50 + generator.num_args) + " x i32]* " + generator.frame_ptr + ", i32 0, i32 " + offset);
                                                                                 buffer.emit("store i32 0, i32* " + ptr);
                                                                                 $$ = new CodeGenBlock();
                                                                              }
               | TypeAnnotation Type ID ASSIGN Exp SC                         {
																				 AssertAssignLegal($2->type, $5->type);
																				 bool converted =false;
																				 int val;
																				 try{
                                                                                    val = std::stoi($5->val);
                                                                                    converted = true;
                                                                                 }
                                                                                 catch(...) {

                                                                                 }
                                                                                 if(converted == true && $1->type == "CONST" && ($2->type == "INT" || $2->type == "BYTE") && $5->print_val == true){
                                                                                    parser.symbolTable.AddSymbol($1->type, $3->name, $2->type, $5->val);
                                                                                 }
                                                                                 else
                                                                                 {
                                                                                    parser.symbolTable.AddSymbol($1->type, $3->name, $2->type);
                                                                                    if ($2->type == "BOOL") {
                                                                                        SCE($5, buffer);
                                                                                    }
                                                                                    string offset = to_string(parser.symbolTable.GetSymbol($3->name, false)->offset + generator.num_args);
                                                                                    string ptr = generator.new_tmp();
                                                                                    buffer.emit(ptr + " = getelementptr [" + to_string(50 + generator.num_args) + " x i32], [" + to_string(50 + generator.num_args) + " x i32]* " + generator.frame_ptr + ", i32 0, i32 " + offset);
                                                                                    if($5->print_val && $5->annotation == "CONST"){
                                                                                        buffer.emit("store i32 " + $5->val + ", i32* " + ptr);
                                                                                    }
                                                                                    else{
                                                                                        buffer.emit("store i32 " + $5->reg + ", i32* " + ptr);
                                                                                    }
                                                                                 }

                                                                                 $$ = new CodeGenBlock();
                                                                              }
               | ID ASSIGN Exp SC                                             {
																				  if(GetAnnotation($1->name) == "CONST") {
																					output::errorConstMismatch(yylineno);
																					exit(1);
																				  }
																				  string type = GetType($1->name);
																				  AssertAssignLegal(type, $3->type);
																				  if (type == "BOOL") {
                                                                                    SCE($3, buffer);
                                                                                  }
                                                                                  string offset = to_string(parser.symbolTable.GetSymbol($1->name, false)->offset + generator.num_args);
                                                                                  string ptr = generator.new_tmp();
                                                                                  if($3->print_val == true && $3->annotation == "CONST"){
                                                                                        buffer.emit("store i32 " + $3->val + ", i32* " + ptr);
                                                                                  }
                                                                                  else{
                                                                                      buffer.emit(ptr + " = getelementptr [" + to_string(50 + generator.num_args) + " x i32], [" + to_string(50 + generator.num_args) + " x i32]* " + generator.frame_ptr + ", i32 0, i32 " + offset);
                                                                                      buffer.emit("store i32 " + $3->reg + ", i32* " + ptr);
                                                                                  }

                                                                                  $$ = new CodeGenBlock();
                                                                              }
               | Call SC                                                      {
                                                                                  $$ = new CodeGenBlock();
                                                                                  if ($1->type == "BOOL") {
                                                                                      string nextLabel = buffer.genLabel();
                                                                                      buffer.bpatch($1->false_list, nextLabel);
                                                                                      buffer.bpatch($1->true_list, nextLabel);
                                                                                  }
                                                                              }
               | RETURN SC                                                    {
                                                                                  parser.AssertReturn("VOID");
                                                                                  generator.generated_return = true;

                                                                                  buffer.emit("ret void");
                                                                                  $$ = new CodeGenBlock();
                                                                              }
               | RETURN Exp SC                                                {
                                                                                  generator.generated_return = true;
																				  if(parser.ScopeReturnType == "VOID") {
																					output::errorMismatch(yylineno);
																					exit(1);
																				  }
																				  parser.AssertReturn($2->type);
																				  AssertAssignLegal(parser.ScopeReturnType, $2->type);
																				  if (parser.ScopeReturnType == "BOOL") {
                                                                                      SCE($2, buffer);
                                                                                  }
                                                                                  if($2->print_val == true && $2->annotation == "CONST"){
                                                                                     buffer.emit("ret i32 " + $2->val);
                                                                                  }
                                                                                  else{
                                                                                      buffer.emit("ret i32 " + $2->reg);
                                                                                  }
                                                                                  generator.generated_return = true;
                                                                                  $$ = new CodeGenBlock();
                                                                              }
               | If %prec IF
                                                                              {
                                                                                  if(generator.if_scope_started == false) {
                                                                                      generator.if_scope_started = true;
                                                                                  }
                                                                                  buffer.bpatch($1->exp->true_list, $1->label);
                                                                                  $$ = new CodeGenBlock();
                                                                                  $$->continueList = $1->block->continueList;
                                                                                  $$->breakList = $1->block->breakList;
                                                                                  $$->nextList = CodeBuffer::merge($1->exp->false_list, $1->block->nextList);
                                                                                  int address = buffer.emit("br label @");
                                                                                  $$->nextList = CodeBuffer::merge($$->nextList, CodeBuffer::makelist({address, FIRST}));
                                                                                  string label = buffer.genLabel();
                                                                                  buffer.bpatch($$->nextList, label);
                                                                                  generator.if_scope_started = false;
                                                                              }
               | If Else
                                                                              {
                                                                                if(generator.if_scope_started == false) {
                                                                                    generator.if_scope_started = true;
                                                                                }
                                                                                buffer.bpatch($1->exp->false_list, $2->label);
                                                                                buffer.bpatch($1->exp->true_list, $1->label);

                                                                                $$ = new CodeGenBlock();
                                                                                $$->breakList = CodeBuffer::merge($1->block->breakList, $2->block->breakList);
                                                                                $$->continueList = CodeBuffer::merge($1->block->continueList, $2->block->continueList);
                                                                                $$->nextList = CodeBuffer::merge($1->block->nextList, $2->block->nextList);

                                                                                int address = buffer.emit("br label @");
                                                                                $$->nextList = CodeBuffer::merge($$->nextList, CodeBuffer::makelist({address, FIRST}));
                                                                                string label = buffer.genLabel();
                                                                                buffer.bpatch($$->nextList, label);
                                                                                generator.if_scope_started = false;
                                                                              }
               | WHILE LPAREN N M Exp CheckBool RPAREN
                                                                              {
                                                                                  parser.EnterLoopScope();
                                                                              }
                    M Statement
                                                                              {
                                                                                  parser.ExitLoopScope();
                                                                                  $$ = new CodeGenBlock();
                                                                                  buffer.bpatch($10->continueList, $4->label);
                                                                                  buffer.bpatch($5->true_list, $9->label);
                                                                                  buffer.bpatch($10->nextList, $4->label);
                                                                                  buffer.bpatch($3->nextList, $4->label);
                                                                                  $$->nextList = CodeBuffer::merge($5->false_list, $10->breakList);
                                                                                  buffer.emit("br label %" + $4->label);
                                                                                  string label = buffer.genLabel();
                                                                                  // buffer.bpatch($$->nextList, label);
                                                                                  buffer.bpatch($10->breakList, label);
                                                                                  buffer.bpatch($5->false_list, label);
                                                                              }
               | BREAK SC                                                     {
                                                                                  parser.AssertBreakLegal();

                                                                                      $$ = new CodeGenBlock();
                                                                                      int address = buffer.emit("br label @");
                                                                                      $$->breakList = CodeBuffer::makelist({address, FIRST});
                                                                                  }
               | CONTINUE SC                                                  {
                                                                                  parser.AssertContinueLegal();
                                                                                  $$ = new CodeGenBlock();
                                                                                  int address = buffer.emit("br label @");
                                                                                  $$->continueList = CodeBuffer::makelist({address, FIRST});
                                                                              }

MarkInIf       : CheckBool
                                                                              {

                                                                                  $$ = new CodeGenLabel(buffer.genLabel());
                                                                              }

Call           : ID LPAREN ExpList RPAREN                                     {
                                                                                  Function* f = GetFunction($1->name, $3->arguments);
                                                                                  $$ = new Exp(f->return_type);
                                                                                  if ($1->name == "print") {
                                                                                      auto strExp = $3->exp.at(0);
                                                                                      buffer.emit("call void @print(i8* getelementptr ([" + strExp->size + " x i8], [" + strExp->size + " x i8]* " + strExp->reg + ", i32 0, i32 0))");
                                                                                  } else {
                                                                                      HandleCall($$, $1, $3, f, true, buffer);
                                                                                  }
                                                                              }
               | ID LPAREN RPAREN                                             {
																				  ArgumentList *arg_list = new ArgumentList();
																				  Function* f = GetFunction($1->name, arg_list->arguments);
                                                                                  $$ = new Exp(f->return_type);
                                                                                  HandleCall($$, $1, nullptr, f, false, buffer);
                                                                              }


ExpList        : Exp                                                          {
                                                                                  $$ = new ArgumentList();
                                                                                  $$->arguments.push_back(Argument($1->type, $1->name, $1->type));
                                                                                  $$->exp.push_back($1);
                                                                                  if ($1->type == "BOOL") {
                                                                                      SCE($1, buffer);
                                                                                  }
                                                                              }
               | Exp COMMA                                                    {
                                                                                  if ($1->type == "BOOL") {
                                                                                      SCE($1, buffer);
                                                                                  }
                                                                              }
               ExpList                                                        {

                                                                                  $$ = new ArgumentList();
                                                                                  $$ = $4;
                                                                                  $$->exp.push_back($1);
                                                                                  $$->arguments.push_back(Argument($1->type, $1->name, $1->type));

                                                                              }

Type           : INT                                                          {
																			   $$ = new Exp("INT");
                                                                              }
               | BYTE                                                         {
                                                                               $$ = new Exp("BYTE");
                                                                              }
               | BOOL                                                         {
                                                                               $$ = new Exp("BOOL");
                                                                              }


TypeAnnotation : CONST                                                        {
																				  $$ = new Exp("CONST");
                                                                              }
               |                                                              {
                                                                                  $$ = new Exp("");
                                                                              }


Exp            : LPAREN Exp RPAREN                                            {
                                                                                  $$ = new Exp($2->type);
                                                                                  parser.ExpType = $2->type;

                                                                                  $$->reg = $2->reg;
                                                                                  $$->true_list = $2->true_list;
                                                                                  $$->false_list = $2->false_list;
                                                                              }
               | Exp BINOP_ADD Exp                                            {
                                                                                  $$ = ExecuteOperation($1, $3, ENUM_BINOP, "add", buffer);
                                                                                  parser.ExpType = $$->type;
                                                                              }
               | Exp BINOP_SUB Exp                                            {
                                                                                  $$ = ExecuteOperation($1, $3, ENUM_BINOP, "sub", buffer);
                                                                                  parser.ExpType = $$->type;
                                                                              }
               | Exp BINOP_MULTIPLY Exp                                       {
                                                                                  $$ = ExecuteOperation($1, $3, ENUM_BINOP, "mul", buffer);
                                                                                  parser.ExpType = $$->type;
                                                                              }
               | Exp BINOP_DIV Exp                                       {
                                                                                  $$ = ExecuteOperation($1, $3, ENUM_BINOP, "sdiv", buffer);
                                                                                  parser.ExpType = $$->type;
                                                                              }
               | ID                                                           {


                                                                                  auto sym = parser.symbolTable.GetSymbol($1->name, false);
                                                                                  $$ = new Exp(GetType($1->name));
                                                                                  $$->name = $1->name;
                                                                                  parser.ExpType = GetType($1->name);
                                                                                  if($1->name == "i"){
                                                                                    //std::cout << "TO PRINT IS : " << ((Variable*)sym)->to_print << "  VALLLL IS " <<  ((Variable*)sym)->val << "ANOTATION ISSS " << ((Variable*)sym)->type_annotation;
                                                                                  }
                                                                                  if(((Variable*)sym)->to_print == true && ((Variable*)sym)->type_annotation == "CONST"){
                                                                                     $$->annotation = "CONST";
                                                                                     $$->print_val = true;
                                                                                     $$->val = ((Variable*)sym)->val;
                                                                                     $$->reg = $$->val;
                                                                                  }
                                                                                  else{
                                                                                      string ptr = generator.new_tmp();
                                                                                      $$->reg = generator.new_tmp();
                                                                                      string offset = to_string(sym->offset + generator.num_args);
                                                                                      buffer.emit(ptr + " = getelementptr [" + to_string(50 + generator.num_args) + " x i32], [" + to_string(50 + generator.num_args) + " x i32]* " + generator.frame_ptr + ", i32 0, i32 " + offset);
                                                                                      buffer.emit($$->reg + " = load i32, i32* " + ptr);

                                                                                      if (sym->type == "BOOL") {
                                                                                          string cond = generator.new_tmp();
                                                                                          buffer.emit(cond + " = icmp eq i32 " + $$->reg + ", 1");
                                                                                          int address = buffer.emit("br i1 " + cond + ", label @, label @");
                                                                                          $$->true_list = CodeBuffer::merge($$->true_list, CodeBuffer::makelist({address, FIRST}));
                                                                                          $$->false_list = CodeBuffer::merge($$->false_list, CodeBuffer::makelist({address, SECOND}));
                                                                                      }
                                                                                  }
                                                                              }
               | Call                                                         {
                                                                                  $$ = new Exp($1->type);
                                                                                  parser.ExpType = $1->type;

                                                                                  if ($$->type != "VOID") {
                                                                                      $$->reg = $1->reg;
                                                                                  }
                                                                                  $$->true_list = $1->true_list;
                                                                                  $$->false_list = $1->false_list;
                                                                              }
               | NUM                                                          {
																				  $$ = new Exp("INT");
                                                                                  parser.ExpType = "INT";
                                                                                  $$->val =to_string(yylval.val);
                                                                                  $$->print_val = true;
                                                                                  $$->reg = generator.new_tmp();
                                                                                  buffer.emit($$->reg + " = add i32 0, " + to_string(yylval.val));
                                                                              }
               | NUM B                                                        {
                                                                                CheckLegalB(yylval.val);
                                                                                  $$ = new Exp("BYTE");
                                                                                  parser.ExpType = "BYTE";
                                                                                  $$->val =to_string(yylval.val);
                                                                                  $$->print_val = true;
                                                                                  $$->reg = generator.new_tmp();
                                                                                  buffer.emit($$->reg + " = add i32 0, " + to_string(yylval.val));
                                                                              }
               | STRING                                                       {
                                                                                  $$ = new Exp("STRING");
                                                                                  parser.ExpType = "STRING";

                                                                                  $$->reg = generator.new_string();
                                                                                  $$->size = to_string(yylval.id->name.size() + 1);
                                                                                  buffer.emitGlobal($$->reg + " = global [" + $$->size + " x i8] c\"" + yylval.id->name + "\\00\"");
                                                                              }
               | TRUE                                                         {
                                                                                  $$ = new Exp("BOOL");
                                                                                  parser.ExpType = "BOOL";

                                                                                  int address = buffer.emit("br label @");
                                                                                  $$->true_list = CodeBuffer::merge($$->true_list, CodeBuffer::makelist({address, FIRST}));
                                                                              }
               | FALSE                                                        {
                                                                                  $$ = new Exp("BOOL");
                                                                                  parser.ExpType = "BOOL";

                                                                                  int address = buffer.emit("br label @");
                                                                                  $$->false_list = CodeBuffer::merge($$->false_list, CodeBuffer::makelist({address, FIRST}));
                                                                              }
               | NOT Exp                                                      {
                                                                                  $$ = ExecuteOperation($2, $2, ENUM_NOT, "", buffer);
                                                                                  parser.ExpType = "BOOL";
                                                                              }
               | Exp AND M Exp                                                {
                                                                                  buffer.bpatch($1->true_list, $3->label);
                                                                                  $$ = ExecuteOperation($1, $4, ENUM_AND, "", buffer);
                                                                                  parser.ExpType = "BOOL";
                                                                              }
               | Exp OR M Exp                                                 {
                                                                                  buffer.bpatch($1->false_list, $3->label);
                                                                                  $$ = ExecuteOperation($1, $4, ENUM_OR, "", buffer);
                                                                                  parser.ExpType = "BOOL";
                                                                              }
               | Exp RELOP_EQUAL Exp                                          {
                                                                                  $$ = ExecuteOperation($1, $3, ENUM_RELOP, "eq", buffer);
                                                                                  parser.ExpType = "BOOL";
                                                                              }
               | Exp RELOP_NOT_EQUAL Exp                                          {
                                                                                  $$ = ExecuteOperation($1, $3, ENUM_RELOP, "ne", buffer);
                                                                                  parser.ExpType = "BOOL";
                                                                              }
               | Exp RELOP_LT Exp                                          {
                                                                                  $$ = ExecuteOperation($1, $3, ENUM_RELOP, "slt", buffer);
                                                                                  parser.ExpType = "BOOL";
                                                                              }
               | Exp RELOP_GT Exp                                          {
                                                                                  $$ = ExecuteOperation($1, $3, ENUM_RELOP, "sgt", buffer);
                                                                                  parser.ExpType = "BOOL";
                                                                              }
               | Exp RELOP_LTE Exp                                          {
                                                                                  $$ = ExecuteOperation($1, $3, ENUM_RELOP, "sle", buffer);
                                                                                  parser.ExpType = "BOOL";
                                                                              }
               | Exp RELOP_GTE Exp                                                {
                                                                                  $$ = ExecuteOperation($1, $3, ENUM_RELOP, "sge", buffer);
                                                                                  parser.ExpType = "BOOL";
                                                                              }
               | LPAREN Type RPAREN Exp                                       {
                                                                                  $$ = NewCastedExp($4, $2->type);
                                                                                  string reg = generator.new_tmp();
                                                                                  $$->reg = reg;

                                                                                  if($$->type == "BYTE") {
                                                                                      buffer.emit(reg + " = and i32 " + $4->reg + ", 255");
                                                                                  }
                                                                                  else {
                                                                                      buffer.emit(reg + " = add i32 "+$4->reg + ", 0");
                                                                                  }

                                                                              }
ScopeStart      :                                                             {
                                                                                  parser.symbolTable.OpenScope();
                                                                              }


ScopeEnd        :                                                             {
                                                                                  parser.symbolTable.CloseScope();
                                                                              }
																			  
CheckBool		:															  {
                                                                                  if (parser.ExpType !="BOOL")
                                                                                  {
                                                                                      errorMismatch(yylineno);
                                                                                      exit(1);
                                                                                  }
																			  }


